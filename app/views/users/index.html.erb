<h3>Users</h3>

<%= form_tag users_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<div class="span8">
<table class="table table-condensed">
  <thead>
    <tr>
      <th></th>
      
      <th></th>
      
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  
<%= paginate @users%>
  <% @users.each do |user| %>
    <tr>
      <h1><td><%= link_to user.name.titleize, user %></td></h1>
      
      <td><ul><ul><ul><ul><ul></td>
      <td><ul><ul><ul><ul><ul></td>
      <td><ul><ul><ul><ul><ul></td>
     
        <%= render user %>
      </td>
    
       


       <% if current_user.following?(user) %>
     <div id ="follow">
      <td><%= link_to "unfollow", unfollow_user_path(user) , :class =>"button5" unless user == current_user %></td></div>
      <%else %>
     <div id="unfollow"><td><%= link_to "follow", follow_user_path(user), :class =>"button4"unless user == current_user%></td></div>
     <% end%>


    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @users%>
</div>
